*&---------------------------------------------------------------------*
*& Report ZO4USER10_ST_DETAIL
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
REPORT ZO4USER10_ST_DETAIL.

data : lt_ZO4USER10_STD_DETAIL type TABLE of ZO4USER10_STUD,
        ls_ZO4USER10_STD_DETAIL type ZO4USER10_STUD.


SELECT * FROM ZO4USER10_STUD into TABLE lt_ZO4USER10_STD_DETAIL.

  WRITE: / 'STUDENT DETAILS' COLOR 7 INTENSIFIED ON INVERSE ON .
  FORMAT COLOR 3 .

  WRITE : / sy-Uname.
  ULINE.

  WRITE: / SY-DATUM .
  ULINE.
  FORMAT COLOR OFF.

  FORMAT COLOR COL_HEADING.
  WRITE: / 'STUDENT ID' , 12'|',
           'ENROLL NO' , 28'|',
           'NAME' , 45'|',
           'GENDER' , 55'|',
           'DOB' , 65 '|',
           'FATHERS NAME' , 75'|',
           'MOTHERS NAME' , 90'|',
           'STUD EMAIL' , 110'|',
           'COURSE' ,120'|',
           'ADDRESS' , 135'|',
           'CITY' , 145'|',
           'PHONE_NO' , 160'|',
           'EMER NO', 170'|',
           'MED_CONDITION' .
  ULINE.
  FORMAT COLOR OFF.


 LOOP AT lt_ZO4USER10_STD_DETAIL INTO ls_ZO4USER10_STD_DETAIL .

 WRITE : / ls_ZO4USER10_STD_DETAIL-STUDENT_ID,12 '|',
ls_ZO4USER10_STD_DETAIL-STUDENT_ENROLL_DATE,28 '|',
ls_ZO4USER10_STD_DETAIL-STUD_FIR_NAME && ls_ZO4USER10_STD_DETAIL-STUD_LAS_NAME,45 '|',
ls_ZO4USER10_STD_DETAIL-STUDENT_GENDER,55 '|',
ls_ZO4USER10_STD_DETAIL-STUDENT_DOB,65 '|',
ls_ZO4USER10_STD_DETAIL-STUD_FATHER_NAME,75 '|',
ls_ZO4USER10_STD_DETAIL-STUD_MOTHER_NAME,90 '|',
ls_ZO4USER10_STD_DETAIL-STUDENT_EMAIL,110 '|',
ls_ZO4USER10_STD_DETAIL-STUDENT_COURSE,120 '|',
ls_ZO4USER10_STD_DETAIL-STUDENT_ADDR,135 '|',
ls_ZO4USER10_STD_DETAIL-STUDENT_CITY,145 '|',
ls_ZO4USER10_STD_DETAIL-STUDENT_PHONE_NO, 160 '|',
ls_ZO4USER10_STD_DETAIL-STUDENT_EMERGENCY_PH_NO,170 '|',
ls_ZO4USER10_STD_DETAIL-STUDENT_MEDICAL_CONDITION,180 '|'.
 ULINE.
 ENDLOOP.
